.padding-10{
    padding: 10rpx;
}
.movie-list{
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
}
.movie-item{
    width: 33.333333%;
    text-align: center;
    overflow: hidden;
}
.item-inner{
    margin: 5rpx;
    color: #666;
    font-size: 28rpx;
}
.movie-image{
    width: 100%;
    height: 300rpx;
}
.bigstar{
    width: 120rpx;
    height: 24rpx;
}
.movie-name{
    display: block;
    font-size: 28rpx;
    text-align: center;
    white-space:nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}